@model ObterLimite

<div class="card card-body">
    <div class="row">
        <div class="text-center">
            <h5>Altera Limite Cliente</h5>
        </div>
    </div>
    @if (Model.ErrorMensagem != null) { 
        <div class="alert-danger">
            @Model.ErrorMensagem
        </div>
    }
    <div class="row">
        <div class="form-group">
            <form asp-action="AlterarLimite">
                <input type="hidden" asp-for="Codigo" value="@Model.Codigo" />

                <label asp-for="Valor" class="form-control">Valor da Venda</label>
                <input type="number" asp-for="Valor" class="form-control" />
                <label class="form-control" asp-for="Subtrair">Marque se for para diminuir o limite</label>
                <input type="checkbox" class="form-check-input" asp-for="Subtrair"/>

                <input type="submit" class="btn btn-primary" value="Vender" />



            </form>
            <a asp-action="Index">Cancelar</a>
        </div>
    </div>
</div>
