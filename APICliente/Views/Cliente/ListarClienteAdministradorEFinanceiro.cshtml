@model IEnumerable<Clientes>
@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="card card-body">
    <table class="table table-striped table-bordered table-sm row-border hover" style="table-layout: fixed;">
        <thead>
            <tr>
                <th class="text-center" style="width: 15%">Codigo</th>
                <th class="text-center" style="width: 50%">Nome do Cliente</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.Codigo</td>
                    <td class="text-center">@item.Nome</td>
                    <td class="text-center">
                        @if (item.IsActive)
                        {
                            <a href="@Url.Action("AlterarStatus", new { codigo = @item.Codigo })" class="btn btn-primary"><span class="fas fa-times"></span> Desativar</a>
                        }
                        @if (!item.IsActive)
                        {
                            <a href="@Url.Action("AlterarStatus", new { codigo = @item.Codigo })" class="btn btn-danger"><span class="fa fa-check"> Ativar</span></a>
                        }

                        <a href="@Url.Action("AjustarLimite", new { codigo = @item.Codigo })" class="btn btn-secondary"><span class="fas fa-dollar-sign"></span> Ajustar Limite</a>

                    </td>


                </tr>
            }

        </tbody>
    </table>
</div>
